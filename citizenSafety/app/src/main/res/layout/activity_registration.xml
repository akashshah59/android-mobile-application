<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.allieddigital.citizen.registration"
    >

    <TextView android:text="This is the Registration Page.Data goes to the Police!" android:layout_width="wrap_content"
        android:textSize="40px"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/name"
        android:imeOptions="actionNext"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:text=""
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:text=""
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/number"
        android:layout_below="@+id/mail"
        android:layout_alignStart="@+id/mail"
        android:text=""
        android:imeActionLabel="Done"
        android:imeOptions="actionGo"/>


    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pb"
        android:layout_alignParentEnd="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="Name"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@+id/name"
        android:layout_toStartOf="@+id/name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="License/Aadhar Number"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@+id/password"
        android:layout_toStartOf="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:text="Phone Number"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@+id/number"
        android:layout_toStartOf="@+id/number" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="Email-ID"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@+id/mail"
        android:layout_toStartOf="@+id/mail" />

</RelativeLayout>
