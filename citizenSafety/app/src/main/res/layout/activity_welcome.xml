<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#000005"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Welcome">


    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F0A000"
        android:textSize="5mm"
        android:id="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/imageButton"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="75dp" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pb"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="30mm"
        android:layout_height="20mm"
        android:id="@+id/imageView2"
        android:background="@drawable/adsl"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />



</RelativeLayout>
