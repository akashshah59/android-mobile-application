<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="net.allieddigital.citizen.existing">

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F0A000"
        android:textSize="5mm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8" />

    <ImageButton
        android:layout_width="18mm"
        android:layout_height="15mm"
        android:id="@+id/RED"
        android:background="@drawable/red"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp" />
    <ImageButton
        android:layout_width="18mm"
        android:layout_height="15mm"
        android:id="@+id/YELLOW"
        android:background="@drawable/yellow"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/RED"
        android:layout_alignStart="@+id/RED" />
    <ImageButton
        android:layout_width="18mm"
        android:layout_height="15mm"
        android:id="@+id/GREEN"
        android:background="@drawable/green"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/YELLOW"
        android:layout_alignStart="@+id/YELLOW" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textColor="#F0A000"
        android:text="\tStatus"
        android:layout_above="@+id/GREEN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location1"
        android:text="\nLatitude"
        android:textColor="#F0A000"
        android:layout_below="@+id/location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location2"
        android:text="\nLongitude"
        android:textColor="#F0A000"
        android:layout_below="@+id/location1"/>


</RelativeLayout>
